sc_agent_of_rule_changing
=> nrel_main_idtf:
	[sc-агент замены по правилу] (* <- lang_ru;; *);
	[sc-agent of rule changing] (* <- lang_en;; *);
	
<- abstract_sc_agent;

=> nrel_primary_initiation_condition: 
	(sc_event_add_output_arc => question_initiated);
	
=> nrel_initiation_condition_and_result: 
	(..sc_agent_of_rule_changing_condition => ..sc_agent_of_rule_changing_result);
	
<= nrel_sc_agent_key_sc_elements: 
	{
	question_initiated;
	question;
	action_to_make_rule_changing
	};
	
=> nrel_inclusion: 
	.platform_independent_realization_of_sc_agent_of_rule_changing
	(*
	<- platform_independent_abstract_sc_agent;;
	<= nrel_sc_agent_program: 
		{
		agent_of_rule_changing;
                proc_of_rule_changing;
		proc_of_selecting_tree;
		proc_of_finding_section
		};;
		
	-> sc_agent_of_rule_changing_scp 
		(* <- active_sc_agent;; *);;
	*);;

..sc_agent_of_rule_changing_condition
= [*
	action_to_make_rule_changing _-> .._question;;
	question_initiated _-> .._question;;
	question _-> .._question;;
	.._question _-> rrel_1:: .._parameter1;;
	.._question _-> rrel_2:: .._parameter2;;
*];;

..sc_agent_of_rule_changing_result
= [*
	action_to_make_rule_changing _-> .._question;;
	question_finished _-> .._question;;
	question _-> .._question;;
	.._question _=> nrel_answer:: .._answer;;
	.._question _-> rrel_1:: .._parameter1;;
	.._question _-> rrel_2:: .._parameter2;;
*];;
